@model SistemaTiendaMVC.Models.CompraProducto

@{
    ViewData["Title"] = "Detalles de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Proveedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Proveedor.Direccion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CantidadPorProducto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadPorProducto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaCompra)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>