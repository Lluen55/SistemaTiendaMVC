@model IEnumerable<SistemaTiendaMVC.Models.DetalleVentaProducto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VentasProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPorProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioUnitarioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImporteTotalPorProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VentasProducto.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadPorProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUnitarioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImporteTotalPorProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
