@model SistemaTiendaMVC.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="NombreCategoria" class="control-label"></label>
                    <input asp-for="NombreCategoria" class="form-control"/>
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Estado</label>
                    <select class="form-select" asp-for="Estado">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success"/>
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}