@model SistemaTiendaMVC.Models.VentaProducto

@{
    ViewData["Title"] = "Detalle de Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div>
        <h4>VentaProducto</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CantidadProducto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadProducto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CantidadTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CostoTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CostoTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImporteRecibido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImporteRecibido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImporteCambio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImporteCambio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </div>
</div>