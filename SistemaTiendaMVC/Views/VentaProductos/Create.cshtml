@model SistemaTiendaMVC.Models.VentaProducto

@{
    ViewData["Title"] = "Registrar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <h4>VentaProducto</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ProductoId" class="control-label"></label>
                    <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CantidadProducto" class="control-label"></label>
                    <input asp-for="CantidadProducto" class="form-control"/>
                    <span asp-validation-for="CantidadProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CantidadTotal" class="control-label"></label>
                    <input asp-for="CantidadTotal" class="form-control"/>
                    <span asp-validation-for="CantidadTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostoTotal" class="control-label"></label>
                    <input asp-for="CostoTotal" class="form-control"/>
                    <span asp-validation-for="CostoTotal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImporteRecibido" class="control-label"></label>
                    <input asp-for="ImporteRecibido" class="form-control"/>
                    <span asp-validation-for="ImporteRecibido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImporteCambio" class="control-label"></label>
                    <input asp-for="ImporteCambio" class="form-control"/>
                    <span asp-validation-for="ImporteCambio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaRegistro" class="control-label"></label>
                    <input asp-for="FechaRegistro" class="form-control"/>
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-success"/>
                    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}